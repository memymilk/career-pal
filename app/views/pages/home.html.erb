</section>

<section id="how-it-work">
    <div class="container d-flex justify-content-center">
      <div class="row justify-content-center my-auto py-5">

          <h1 class="display-3 text-center mb-5">How It Works</h1>
          <div class="col-md-9">

            <div class="hiw-item d-flex align-items-center justify-content-end">
              <div class="hiw-icon order-md-2">
                <%= image_tag "icon_hiw_step_1.svg" %>
              </div>
              <div class="hiw-text text-left order-md-1">
                <p>SignUp. Fill out the CV form or connect your Linked In Account</p>
              </div>
              <div class="hiw-line d-none d-md-inline-block">
                <%= image_tag "hiw_dashed_line_step_1.svg", class:"dashed-line-1"%>
              </div>
            </div>

            <div class="hiw-item d-flex align-items-center">
              <div class="hiw-icon">
                <%= image_tag "icon_hiw_step_2.svg" %>
              </div>
              <div class="hiw-text text-left">
                <p>Get matched with another Pal online and start the video call</p>
              </div>
              <div class="hiw-line d-none d-md-inline-block">
                <%= image_tag "hiw_dashed_line_step_2.svg", class:"dashed-line-2"%>
              </div>
            </div>

            <div class="hiw-item d-flex align-items-center justify-content-end">
              <div class="hiw-icon order-md-3">
                <%= image_tag "icon_hiw_step_3.svg" %>
              </div>
              <div class="hiw-text text-left order-md-2">
                <p>Switch roles between interviewer & interviewee</p>
              </div>
              <div class="hiw-line d-none d-md-inline-block order-md-1"></div>
            </div>

            <div class="hiw-item d-flex align-items-center">
              <div class="hiw-icon">
                <%= image_tag "icon_hiw_step_4.svg" %>
              </div>
              <div class="hiw-text text-left">
                <p>Get feedback to improve and then nail your next real interview!</p>
              </div>
              <div class="hiw-line d-none d-md-inline-block">
              <%= image_tag "hiw_dashed_line_step_4.svg", class:"dashed-line-3"%>
              </div>
            </div>

          </div>
      </div>
    </div>
</section>

